@model MovieXReview.Models.ViewModels.MovieDetails

@{
    ViewData["Title"] = "Movie Details";
}

@if (Model.Movie != null)
{
    <div class="container my-5">
        <div class="row">
            <!-- Movie Details -->
            <div class="col-md-8">
                <h2 class="text-primary">@Model.Movie.MovieName</h2>
                <p><strong>Year:</strong> @Model.Movie.Year</p>
                <p><strong>Introduction:</strong> @Model.Movie.Introduction</p>
                <p><strong>Rate:</strong> @Model.Movie.Rate</p>
                <p><strong>Duration:</strong> @Model.Movie.Duration</p>
                <p><strong>Director:</strong> @Model.Movie.Director</p>
                <p><strong>Star:</strong> @Model.Movie.Star</p>
                <p><strong>Tickets Available:</strong> @Model.Movie.TicketQuantity</p>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="mt-5">
            <h3 class="text-secondary">Reviews</h3>
            @if (Model.MovieReviews != null && Model.MovieReviews.Any())
            {
                <div class="list-group">
                    @foreach (var review in Model.MovieReviews)
                    {
                        <div class="list-group-item mb-2">
                            <h5 class="mb-1">@review.ReviewTitle</h5>
                            <p class="mb-1 text-muted">By: @review.ViewerName | Rating: @review.Rate</p>
                            <p>@review.ReviewContent</p>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No reviews available for this movie.</p>
            }
        </div>
    </div>
}
else
{
    <p class="text-danger">Movie details could not be found.</p>
}