@model IEnumerable<MovieXReview.Models.MovieDto>

@{
    ViewData["Title"] = "Movie List";
}

<div class="container-fluid bg-dark p-3 text-white">
    <h1 class="text-center">Movie List</h1>
</div>

<div class="container-fluid bg-warning p-3 text-dark">
    <div class="container">
        <div class="d-flex flex-row justify-content-between mb-3">
            <a asp-action="New" class="btn btn-outline-dark shadow">Create New</a>
            <a href="/ViewerPage/List" class="btn btn-outline-dark shadow">Go to Viewer Overview</a>
            <a href="/TicketPage/List" class="btn btn-outline-dark shadow">Go to Booking Overview</a>
        </div>

        <!-- Movie Cards Section -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow">
                        <!-- Movie Image -->
                        <img src="@(item.Images != null && item.Images.Any()
                                     ? $"/images/movies/{item.Images.First().ImageId}.{item.Images.First().PicExtension}"
                                     : "~/images/placeholder.jpg")"
                             class="card-img-top"
                             alt="Movie Poster for @item.MovieName"
                             style="width:100%; height:300px; object-fit:cover;">

                        <!-- Movie Details -->
                        <div class="card-body">
                            <h5 class="card-title">@item.MovieName</h5>
                            <p class="card-text">
                                <strong>Year:</strong> @item.Year<br>
                                <strong>Rate:</strong> @item.Rate<br>
                                <strong>Director:</strong> @item.Director<br>
                                <strong>Duration:</strong> @item.Duration<br>
                                <strong>Stars:</strong> @item.Star
                            </p>
                        </div>

                        <!-- Button Section -->
                        <div class="card-footer text-center">
                            <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-warning w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
