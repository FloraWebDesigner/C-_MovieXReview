@model MovieXReview.Models.MovieDto

@{
    ViewData["Title"] = "ConfirmDelete";
}
<h3 class="text-center text-light">Are you sure you want to delete this movie?</h3>
<div class="container-fluid bg-darkgary p-3 text-light">
    <div class="container align-content-center">
        <div>
            <a asp-action="List" class="btn btn-primary shadow">Back to List</a>
        </div>
        <div class="row justify-content-center">

            <div class="form col-md-8 mx-auto text-white bg-black p-md-3 text-capitalize rounded-2 shadow mb-5 fs-5">
                <div class="row m-2 text-light">
                    <div class="col-md-3 text-start">
                        @Html.DisplayNameFor(model => model.MovieName)
                    </div>
                    <div class="col-md-9 fw-bolder text-center">
                        @Html.DisplayFor(model => model.MovieName)
                    </div>
                </div>
                <div class="row m-2 text-light">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.Year)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.Year)
                    </div>
                </div>
                <div class="row m-2 text-light">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.Introduction)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.Introduction)
                    </div>
                </div>
                <div class="row m-2 text-light">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.Rate)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.Rate)
                    </div>
                </div>
                <div class="row m-2 text-light">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.Duration)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.Duration)
                    </div>
                </div>
                <div class="row m-2 text-light">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.Director)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.Director)
                    </div>
                </div>
                <div class="row m-2 text-light">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.Star)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.Star)
                    </div>
                </div>
                <div class="row m-2 text-light">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.TicketQuantity)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.TicketQuantity)
                    </div>
                </div>
                <div class="form-group p-3 text-light">
                    <form asp-action="Delete" asp-route-id="@Model.MovieId">
                        <input type="hidden" asp-for="MovieId" />
                        <input type="submit" value="Delete" class="btn btn-red w-100" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
