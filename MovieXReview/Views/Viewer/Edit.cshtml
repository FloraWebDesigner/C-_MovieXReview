@model MovieXReview.Models.ViewerDto


@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid bg-dark p-3 text-white">
    <h1 class="text-center">Update a Viewer</h1>
</div>
<div class="container-fluid bg-light p-3 text-white">
    <div class="container align-content-center">
        <div class="row align-items-center">
            <div class="col-md-6">
                <a asp-action="List" class="btn btn-primary shadow">Back to Viewer List</a>
            </div>
        </div>
        <div class="row justify-content-center">
            <form asp-action="Update" asp-route-id="@Model.ViewerId" class="form col-md-4 bg-white text-dark p-md-3 rounded-2 shadow mb-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ViewerId" />
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="control-label fw-bolder fs-5"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="control-label fw-bolder fs-5"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Identity" class="control-label"></label>
                    <select asp-for="Identity" class="form-control">
                        <option value="" selected disabled>-- Please select --</option>
                        <option value="general audience">general audience</option>
                        <option value="movie critic">movie critic</option>
                        <option value="journalist">journalist</option>
                    </select>
                    <span asp-validation-for="Identity" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="checkbox" id="Membership" name="Membership" value="Y" @(Model?.Membership == "Y" ? "checked" : "") />
                    <label asp-for="Membership" class="control-label fs-6">Are you a member of our film festival?</label>
                    <span asp-validation-for="Membership" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Age" class="control-label fw-bolder fs-5"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Update" class="btn btn-warning w-100" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
