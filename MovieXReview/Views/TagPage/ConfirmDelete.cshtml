@model MovieXReview.Models.TagDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container-fluid p-3 text-white">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white">
                <div class="card-header">
                    <h2 class="text-danger mb-0">Delete Tag</h2>
                </div>
                <div class="card-body">
                    <h4>Are you sure you want to delete this tag?</h4>
                    <div class="mt-4">
                        <p><strong>Tag Name:</strong> @Model.TagName</p>
                        <p>
                            <strong>Tag Color:</strong>
                            <span class="badge" style="background-color:@Model.TagColor">@Model.TagColor</span>
                        </p>
                    </div>

                    <form asp-action="Delete" asp-route-id="@Model.TagId" class="mt-4">
                        <div class="d-flex justify-content-between">
                            <a asp-action="List" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Tag</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>