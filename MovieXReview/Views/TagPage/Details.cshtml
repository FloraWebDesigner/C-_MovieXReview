@model MovieXReview.Models.ViewModels.TagDetails

@{
    ViewData["Title"] = "Tag Details";
}

<div class="container-fluid p-3 text-white">
    <div class="card bg-dark text-white mb-4">
        <div class="card-header">
            <h2 class="mb-0">@Model.Tag.TagName</h2>
        </div>
        <div class="card-body">
            <p class="mb-0">
                <strong>Tag Color:</strong>
                <span class="badge" style="background-color:@Model.Tag.TagColor">@Model.Tag.TagColor</span>
            </p>
        </div>
    </div>

    <h3 class="mb-4">Movies Tagged with "@Model.Tag.TagName"</h3>

    @if (Model.AssociatedMovies != null && Model.AssociatedMovies.Any())
    {
        <div class="table-responsive">
            <table class="table table-dark table-bordered">
                <thead>
                    <tr class="bg-black">
                        <th>Movie Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model.AssociatedMovies)
                    {
                        <tr>
                            <td class="align-middle">@movie.MovieName</td>
                            <td>
                                <a asp-action="Details" asp-controller="MoviePage"
                                   asp-route-id="@movie.MovieId" class="btn btn-info">View Movie</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-white">No movies are associated with this tag yet.</p>
    }

    <div class="mt-4">
        <a asp-action="List" class="btn btn-secondary">Back to Tag List</a>
    </div>
</div>