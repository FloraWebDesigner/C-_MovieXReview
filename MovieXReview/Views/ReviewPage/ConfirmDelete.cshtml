@model MovieXReview.Models.ReviewDto

@{
    ViewData["Title"] = "Confirm Delete Review";
}

<div class="container-fluid p-3 text-white">
    <h1 class="text-center">Delete Review</h1>
    <div class="container-fluid p-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-black text-white">
                    <div class="card-header">
                        <h3>Are you sure you want to delete this review?</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Title</dt>
                            <dd class="col-sm-8">@Model.ReviewTitle</dd>

                            <dt class="col-sm-4">Content</dt>
                            <dd class="col-sm-8">@Model.ReviewContent</dd>

                            <dt class="col-sm-4">Rating</dt>
                            <dd class="col-sm-8">@Model.Rate / 10</dd>

                            <dt class="col-sm-4">By</dt>
                            <dd class="col-sm-8">@Model.ViewerName</dd>

                            <dt class="col-sm-4">Created</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                        </dl>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="MoviePage" asp-action="Details" asp-route-id="@Model.MovieId"
                               class="btn btn-secondary">Cancel</a>
                            <form asp-action="Delete" asp-route-id="@Model.ReviewId" method="post">
                                <button type="submit" class="btn btn-danger">Delete Review</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
