@model MovieXReview.Models.ReviewDto

@{
    ViewData["Title"] = "Edit Review";
}

<div class="container-fluid p-3 text-white">
    <h1 class="text-center">Edit Review</h1>
    <div class="container-fluid p-3 text-white">
        <div class="container align-content-center">
            <div class="d-flex flex-row justify-content-between pb-5">
                <a asp-controller="MoviePage" asp-action="Details" asp-route-id="@Model.MovieId"
                   class="btn btn-primary shadow">Back to Movie Details</a>
            </div>
        </div>
        <div class="row justify-content-center">
            <form method="POST" asp-action="Update" asp-controller="ReviewPage" class="form col-md-4 p-md-3 rounded-2 shadow">
                <input type="hidden" asp-for="ReviewId" />
                <input type="hidden" asp-for="MovieId" />
                <input type="hidden" asp-for="ViewerId" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="ImageTotal" />

                <div class="form-group mb-3">
                    <label asp-for="ReviewTitle" class="control-label fw-bolder fs-5">Review Title</label>
                    <input asp-for="ReviewTitle" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReviewContent" class="control-label fw-bolder fs-5">Review Content</label>
                    <textarea asp-for="ReviewContent" class="form-control" rows="5" required></textarea>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Rate" class="control-label fw-bolder fs-5">Rating (1-10)</label>
                    <input asp-for="Rate" type="number" class="form-control" min="1" max="10" required />
                </div>

                <div class="form-group">
                    <input type="submit" value="Save Changes" class="btn btn-success w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}